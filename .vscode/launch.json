{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extension Development Host",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
            "outFiles": ["${workspaceRoot}/out/**/*.js"],
            "preLaunchTask": "npm: compile"
        }
    ]
}
